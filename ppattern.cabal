    base >= 4.8,
    containers >=0.5 && <0.6,
    random >=1.1,
    random-shuffle >=0.0,
    patience >=0.1,
    utility-ht >= 0.0.12,
    cmdargs >= 0.10.4
  hs-source-dirs:      src
