cabal-version:       >=1.10

library
  ghc-options: -Wall -Werror -threaded -funfolding-use-threshold=16 -O2 -optc-O3 -rtsopts
  build-depends:
    base >=4.8,
    containers >=0.5 && <0.6,
    random >=1.1,
    random-shuffle >=0.0,
    patience >=0.1,
    utility-ht >= 0.0.12,
    cmdargs >= 0.10.4,
    split >= 0.2.3,
    formatting >= 6.2.4,
    clock >= 0.7.2
  default-language: Haskell2010
  hs-source-dirs: src
  exposed-modules:
    Data.Algorithm.PPattern.Perm
    Data.Algorithm.PPattern.IntPartition
    Data.Algorithm.PPattern.Combi
    Data.Algorithm.PPattern.Color
    Data.Algorithm.PPattern.Random
    Data.Algorithm.PPattern.Tools
    Data.Algorithm.PPattern.CPoint
    Data.Algorithm.PPattern.Embedding
    Data.Algorithm.PPattern.Strategy
    Data.Algorithm.PPattern.Next
    Data.Algorithm.PPattern.CPLink
    Data.Algorithm.PPattern.Splitting
    Data.Algorithm.PPattern

executable ppattern-search
  main-is: PPatternSearch.hs
  --  -with-rtsopts=-N
  ghc-options: -Wall -Werror -threaded -funfolding-use-threshold=16 -O2 -fexcess-precision -optc-O3
  build-depends:
    base >= 4.8,
    containers >=0.5 && <0.6,
    random >=1.1,
    random-shuffle >=0.0,
    patience >=0.1,
    utility-ht >= 0.0.12,
    cmdargs >= 0.10.4,
    split >= 0.2.3,
    criterion >= 1.1.4,
    integer-gmp >= 1.0,
    formatting >= 6.2.4,
    clock >= 0.7.2
  hs-source-dirs:      src
  default-language:    Haskell2010

