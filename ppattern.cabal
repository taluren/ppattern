library
  ghc-options: -Wall -Werror -O2 -threaded -with-rtsopts=-N
  build-depends:
    base >=4.8,
    containers >=0.5 && <0.6,
    random >=1.1,
    random-shuffle >=0.0,
    patience >=0.1,
    utility-ht >= 0.0.12,
    cmdargs >= 0.10.4
  default-language: Haskell2010
  hs-source-dirs: src
  exposed-modules:
    Data.Algorithm.PPattern.Perm
    Data.Algorithm.PPattern.Perm.Random
    Data.Algorithm.PPattern.IntPartition
    Data.Algorithm.PPattern.Combi
    Data.Algorithm.PPattern.Types
    Data.Algorithm.PPattern.Random
    Data.Algorithm.PPattern.Tools
    Data.Algorithm.PPattern.CPoint
    Data.Algorithm.PPattern.Embedding
    Data.Algorithm.PPattern.Strategy
    Data.Algorithm.PPattern.Next
    Data.Algorithm.PPattern.CPLink
    Data.Algorithm.PPattern.Splitting
    Data.Algorithm.PPattern

executable ppattern-search
  main-is:     PPatternSearch.hs
  ghc-options: -Wall -Werror -O2 -threaded -with-rtsopts=-N
